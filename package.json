{
  "name": "prompt-shaper",
  "description": "prompt scripting language",
  "repository": "https://github.com/PrajnaAvidya/prompt-shaper",
  "author": "Prajna Avidya",
  "version": "4.0.0",
  "license": "MIT",
  "main": "dist/cli.js",
  "bin": {
    "prompt-shaper": "./dist/cli.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc && chmod +x dist/cli.js && peggy src/template-parser.pegjs -o dist/template-parser.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "parse": "ts-node src/cli.ts",
    "test": "PROMPT_SHAPER_TESTS=true mocha -r ts-node/register 'test/**/*.spec.ts' --timeout 5000"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "dist/"
  ],
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "commander": "^11.0.0",
    "openai": "^4.85.3",
    "peggy": "^3.0.2"
  },
  "optionalDependencies": {
    "@mozilla/readability": "^0.5.0",
    "jsdom": "^25.0.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/chai": "^4.3.5",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.3",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "chai": "^4.3.10",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.0.7",
    "sinon": "^15.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
